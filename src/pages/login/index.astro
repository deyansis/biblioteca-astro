import Layout from "../../layouts/Layout.astro";
import { Client } from "@notionhq/client";
const notion = new Client({ auth: import.meta.env.API_KEY_NOTION });

async function getUser() {
    const databaseId = "3b67486cb4d34ab09263b13ec9e781d6";

    try {
        const response: any = await notion.databases.query({
            database_id: databaseId,
        });

        return response.results;
    } catch (error) {
        console.error(error.body);
    }
}

const users = await getUser().then((respose) => {
    let usersData = [];
    respose.forEach((result) => {
        if (result.object === "page" && result.properties) {
            const username =
                result.properties.username.rich_text[0]?.plain_text;
            const password =
                result.properties.password.rich_text[0]?.plain_text;

            if (username && password) {
                usersData.push({ username, password });
            }
        }
    });

    return usersData;
});

if (Astro.request.method === "POST") {
    try {
        const data = await Astro.request.formData();
        const usernameLogin = data.get("usernameLogin");
        const passwordLogin = data.get("passwordLogin");

        const userExists = users.some(
            (user) =>
                user.username === usernameLogin &&
                user.password === passwordLogin,
        );

        if (userExists) {
            return Astro.redirect("/biblioteca");
        } else {
            return Astro.redirect("/");
        }
    } catch (error) {
        if (error instanceof Error) {
            console.error(error.message);
        }
    }
}
